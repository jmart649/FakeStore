<Page x:Class="FakeStore.Pages.EmployeeHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FakeStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeHome">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button x:Name="vInventory" Click="vInventory_Click" Grid.Column="0" Background="blue" FontSize="32" FontWeight="Bold" >VIEW INVENTORY</Button>
        <Button x:Name="aInventory" Click="aInventory_Click" Grid.Column="1" Background="Green" FontSize="32" FontWeight="Bold">ADD INVENTORY</Button>
        <Button x:Name="dInventory" Click="dInventory_Click" Grid.Row="1" Background="Orange" FontSize="32" FontWeight="Bold">DELETE INVENTORY</Button>
        <Button x:Name="eLogout" Click="eLogout_Click" Grid.Column="1" Background="red" Grid.Row="1" FontSize="32" FontWeight="Bold">LOGOUT</Button>
    </Grid>
</Page>
