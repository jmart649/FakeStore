<Page x:Class="FakeStore.Pages.CustomerHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FakeStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerHome">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button x:Name="cShop" Click="cShop_Click" Background="Blue" FontSize="32" FontWeight="Bold" >SHOP</Button>
        <Button x:Name="cCart" Click="cCart_Click" Background="Green" Grid.Row="1" FontSize="32" FontWeight="Bold" >CART</Button>
        <Button x:Name="cCheckout" Click="cCheckout_Click" Background="Red" Grid.Row="2" FontSize="32" FontWeight="Bold">CHECKOUT</Button>
    </Grid>
</Page>
